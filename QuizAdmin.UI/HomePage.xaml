<Page x:Class="QuizAdmin.UI.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizAdmin.UI"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Image Source="logo.png" Margin="10" Height="210" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" >
            <Button x:Name="buttonAddQuestion" Content="Add question" FontSize="20" Height="40" Margin="10" Width="300" Click="buttonAddQuestion_Click"/>
            <Button x:Name="buttonViewQuestions" Content="View questions" FontSize="20" Height="40" Margin="10" Width="300" Click="buttonViewQuestions_Click"/>
            <Button x:Name="buttonViewStats" Content="View statistics" FontSize="20" Height="40" Margin="10" Width="300" Click="buttonViewStats_Click"/>
        </StackPanel>
    </Grid>
</Page>
