<Page x:Class="QuizAdmin.UI.QuestionListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizAdmin.UI"
      xmlns:logic="clr-namespace:QuizAdmin.Logic;assembly=QuizAdmin.Logic"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="QuestionListPage">

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Image Source="logo.png" Grid.Column="1" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Right"/>
        <Grid  Margin="10">
        <ListBox x:Name="listboxQuestions" ScrollViewer.HorizontalScrollBarVisibility="Disabled" VerticalContentAlignment="Center">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type logic:Question}">
                    <Grid x:Name="listBoxItemTemplate" HorizontalAlignment="Stretch" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="textBlockText" TextWrapping="Wrap" Text="{Binding Text}" Grid.Column="1"   FontSize="14"/>
                        <TextBlock x:Name="textBlockDate" Text="{Binding ShortDate}" Grid.Row="1" Grid.Column="1"  FontSize="14"/>
                        <TextBlock Text="Question:" VerticalAlignment="Top" FontWeight="Bold" Margin="0 0 3 0"  HorizontalAlignment="Left"  FontSize="14"/>
                        <TextBlock Text="Date:    " FontWeight="Bold" Grid.Row="1" Margin="0 0 3 0"  HorizontalAlignment="Left"  FontSize="14"/>
                    </Grid>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
        </Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Grid.Column="1" Margin="5 0 15 5" VerticalAlignment="Bottom" >
            <Button x:Name="buttonViewStats" Content="View statistics" Width="200" Margin="5"/>
            <Button x:Name="buttonEditQuestion" Content="Edit question" Width="200" Margin="5"/>
            <Button x:Name="buttonDeleteQuestion" Content="Delete question" Width="200" Margin="5" Click="buttonDeleteQuestion_Click"/>
            <Button x:Name="buttonHome" Content="Home" Width="200" Margin="5" Click="buttonHome_Click"/>
        </StackPanel>
    </Grid>
</Page>
